{
    "extends": "../configs/tsconfig.base.json",

    "compileOnSave": true,
    "compilerOptions": {

        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016"
        ],

        "baseUrl": "./",
        "module": "commonjs",
        "outDir": "dist/",

        "paths": {
            "tslib": ["node_modules/tslib/tslib.d.ts"]
        }
   },

   "include": [
       "src/**/*.ts",
       "test/**/*.ts"
   ],

   "exclude": [
      "node_modules/",
      "dist/"
   ]
}
